%undefine __cmake_in_source_build
Name:    poxml
Summary: Text utilities from kdesdk
Version: 21.12.2
Release: 1%{?dist}

License: GPLv2+
URL:     https://cgit.kde.org/%{name}.git

%global revision %(echo %{version} | cut -d. -f3)
%if %{revision} >= 50
%global stable unstable
%else
%global stable stable
%endif
Source0: https://download.kde.org/%{stable}/release-service/%{version}/src/%{name}-%{version}.tar.xz

BuildRequires: extra-cmake-modules
BuildRequires: gettext-devel
BuildRequires: kf5-kdoctools-devel
BuildRequires: kf5-rpm-macros
BuildRequires: pkgconfig(libxslt)
BuildRequires: pkgconfig(Qt5Xml)

# translations moved here
Conflicts: kde-l10n < 17.03

Conflicts:     kdesdk-common < 4.10.80
Provides:      kdesdk-poxml = %{version}-%{release}
Obsoletes:     kdesdk-poxml < 4.10.80

%description
Text utilities from kdesdk, including
po2xml
split2po
swappo
xml2pot


%prep
%autosetup


%build
%{cmake_kf5}

# seeing failures, appear to be parallel-build races
%cmake_build


%install
%cmake_install

%find_lang %{name} --all-name --with-html --with-man


%files -f %{name}.lang
%license COPYING*
%{_kf5_bindir}/po2xml
%{_kf5_bindir}/split2po
%{_kf5_bindir}/swappo
%{_kf5_bindir}/xml2pot
%{_mandir}/man1/po2xml*
%{_mandir}/man1/split2po*
%{_mandir}/man1/swappo*
%{_mandir}/man1/xml2pot*


